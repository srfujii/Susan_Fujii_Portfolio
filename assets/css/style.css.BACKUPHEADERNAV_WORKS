/*****************************************/
/*** Susan Fujii Portfolio Website CSS ***/
/*****************************************/


/******************** GLOBAL DECLARATIONS ***************/
/*** Global Variables ***/
:root {
    --celedonblue: #3A7392;
    --verdigrisbluegreen: #48A9A6;
    --unsplashgreen: #4ea1b1;
    --timberwolfgray: #E4DFDA;
    --burleywoodyellow: #D4B483;
    --fuzzywuzzyred: #C1666B;
    --oxfordblue: #091540;
    --richblack: #0D1821;
    --browncoffee: #362C28;
    --lightgray: #d9dcd6;
    --horizonblue: #2a607c;
}

/*** Global declaration sets margins and padding to 0 ***/
* {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}

/*** Body element sets background color to light gray ***/
body {
    background-color: var(--lightgray);
    color: var(--richblack);
    font-size: 100%;
    line-height: 1;
    font-family: 'Verdana', 'Geneva', 'Tahoma', sans-serif;
}

/*** Element Default Styles ***/
a {
    color: --unsplashgreen;
    text-decoration: none;
}

p {
    margin: 2% 0;
    line-height: 1.5;
}
/***************** END GLOBAL DECLARATIONS ***************/


/******************** HEADER ******************/
/* Default header fonts and color and padding */
header {
    padding: 0;
    background-color: var(--richblack);
}

/* Name */
header h1 {
    display: inline-block;
    font-size: 200%;
    color: var(--richblack);
    background-color: var(--unsplashgreen);
    padding: 1% 1% 1% 3%;
}

/* Navigation Bar */
header nav {
    margin: 2% 0 0 0;
    padding: 1% 1% 1% 0;
    float: right;
    font-size: 150%;
}

/* Specifies no bullets or numbers for our nav bar list */
header nav ul {
    list-style-type: none;
}

/* Each navigation link list item */
header nav ul li {
    display: inline-block;
    margin-left: 25px;
}

/* Link style */
header nav ul li a {
    color: var(--unsplashgreen);
    font-weight: bold;
}

/*** Change the appearance on hover for accessibility ***/
header nav ul li a:hover {
    cursor: pointer;
    background-color: var(--unsplashgreen);
    color: var(--richblack)
}
/******************* END HEADER ***************/


/******************* HERO IMAGE ***************/
/*** Hero Banner Image Under Header ***/
.hero {
    height: 375px;
    width: 100%;
    margin-bottom: 3%;
    background-image: url("../images/usgs-unsplash.jpg");
    background-size: cover;
    background-position: center;
}

/*** Hero Subtitle ***/
.hero h2 {
    position: absolute;
    margin: 20% 2% 2% 67%;
    padding: 1%;
    background-color: var(--unsplashgreen);
    color: var(--richblack);
}
/******************** END HERO ****************/


/******************* MAIN CONTENT *********************/
/*** Grid Layout to set up two columns & 3 rows for ***/
/*** our outer content layout                       ***/
/******************************************************/

/*** Container class for our content grid ***/
.grid-container {
    display: grid;
    grid-template-columns: 20% 80%;
    background-color: var(--lightgray);
    padding: 1%;
    row-gap: 2%;
    margin-bottom: 5%%;
}

/*** Individual grid items within our container ***/
.grid-item {
    background-color: var(--lightgray);
    margin: 0 0 0 0;
    padding: 0;
    color: var(--celedonblue);
}

/*** Title class for the Titles (About Me, Work, Contact Me) ***/
.title {
    border-right: var(--celedonblue) solid 5px;
    text-align: right;
    font-size: 200%;
    padding-right: 5%;
}

/*** Content class for the content in each section ***/
.content {
    text-align: left;
    padding-left: 2%;
}

/*** Special class to eliminate top margin where needed ***/
.notopmargin {
    margin-top: 0;
}

/*** Special class to eliminate bottom margin where needed ***/
.nobottommargin {
    margin-bottom: 0;
}

/*** Used to float Headshot image in About Me to left of text ***/
.float-left {
    float: left;
    margin-right: 25px;
}

.float-right {
    float: right;
    margin-left: 25px;
}

.empty {
    border-right: 0;
}

/******************* FLEXBOX FOR OUR WORK SAMPLES **************/
/*** Our flexbox container ***/
article {
    display: flex;
    flex-wrap: wrap;
    row-gap: 10px;
    column-gap: 22px;
}

/*** Image class to display images for our work samples ***/
.image {
    opacity: 1;
    display: block;
    width: 100%;
    height: auto;
    transition: .5s ease;
    backface-visibility: hidden;
}

/*** Change the image opacity for accessibility to show user when hovering over it ***/
a:hover .image {
    opacity: 0.3;
}
/******************* END FLEXBOX FOR WORK SAMPLES **************/


/***************** Flexbox for Contact Me Items ****************/
/*** Our Contact Me Flexbox Container ***/
.contactmebox {
    display: flex;
    flex-direction: row;
    height: 100%;
    justify-content: space-between;
    align-items: center;
    margin-right: 5%;
}

/*** Give links an underline for accessibility to show they are clickable ***/
.contactme > a {
    text-decoration: underline;
}

/*** Default link color ***/
.contactme > a:link {
    color: var(--unsplashgreen);
}

/*** Visited link color ***/
.contactme > a:visited {
    color:var(--fuzzywuzzyred);
}

/*** Change link appearance when user hovers over it for accessibility ***/
.contactme > a:hover {
    color:var(--timberwolfgray);
    background-color: var(--celedonblue);
}
/*************** END CONTACT ME ******************/


/*************** MEDIA QUERIES *******************/
@media screen and (max-width: 820px) {
    /* Name */
    header h1 {
        display: inline-block;
        font-size: 200%;
        color: var(--richblack);
        background-color: var(--unsplashgreen);
        padding: 1% 1% 1% 3%;
    }

    /*** Change Grid Container to be one column wide ***/
    .grid-container {
        display: grid;
        grid-template-columns: 95%;
        background-color: var(--lightgray);
        padding: 1%;
        row-gap: 2%;
        margin-bottom: 5%;
    }

    /*** Title class for the Titles (About Me, Work, Contact Me) ***/
    .title {
        border-right: 0;
        text-align: center;
        font-size: 200%;
        padding-right: 0;
    }

    /*** Flexbox container for work samples ***/
    article {
        justify-content: center;
    }

    /*** Our Contact Me Flexbox Container ***/
    .contactmebox {
        flex-direction: column;
        justify-content: space-between;
        align-items: space-around;
        align-items: center;
    }
}

@media screen and (max-width: 768px) {
    body {
        background-color: var(--verdigrisbluegreen);
    }

}

@media screen and (max-width: 480px) {
    body {
        background-color: var(--burleywoodyellow);
    }
}
